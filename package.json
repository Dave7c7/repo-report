{
	"name": "repo-report",
	"version": "0.0.0",
	"description": "CLI to list all repos a user has access to, and report on their configuration in aggregate.",
	"main": "bin/run",
	"bin": {
		"repo-report": "./bin/run"
	},
	"scripts": {
		"test": "npm run tests-only",
		"tests-only": "nyc tape 'test/**/*.js'| tap-spec",
		"lint": "eslint ./bin/* .",
		"pretest": "npm run lint",
		"posttest": "aud --production",
		"build:css": "postcss src/static/tailwind.css -o src/static/style.css"
	},
	"engines": {
		"node": ">=14"
	},
	"repository": "https://github.com/ljharb/repo-report",
	"author": "ljharb",
	"license": "MIT",
	"private": false,
	"dependencies": {
		"@fullhuman/postcss-purgecss": "^4.0.3",
		"@octokit/graphql": "^4.8.0",
		"axios": "^0.24.0",
		"cli-table": "^0.3.6",
		"colors": "^1.4.0",
		"cssnano": "^5.0.8",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"jsonschema": "^1.4.0",
		"minimatch": "^3.0.4",
		"mkdirp": "^1.0.4",
		"open": "^8.3.0",
		"yargs": "^17.2.1",
		"yargs-parser": "^20.2.9"
	},
	"devDependencies": {
		"@ljharb/eslint-config": "^18.0.0",
		"aud": "^1.1.5",
		"autoprefixer": "^10.3.7",
		"eslint": "^7.32.0",
		"fetch-mock": "^9.11.0",
		"isomorphic-fetch": "^3.0.0",
		"nyc": "^15.1.0",
		"postcss": "^8.3.11",
		"tailwindcss": "^2.2.17",
		"tap-spec": "^5.0.0",
		"tape": "^5.3.1"
	}
}
